doctype html

html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		meta(name="description" content="サイトの概要文サイトの概要文サイトの概要文サイトの概要文")

		//- タイトル
			titleという名前のblock：継承先で<title>に何も指定しなければdefaultTitleとなる
		block title 
			title defaultTitle

		//- ファビコン
		link(rel="icon" href="favicon.ico")

		//- プラグイン、外部モジュール
			■ CSS：リセット、FontAwesome（CDN）、Swiper、animate（wow）
			■ JS：jQuery（CDN）、Swiper、wow

		//- CSS
		link(rel="stylesheet" href="css/lib/reset.css")
		link(rel="stylesheet" href="css/https://use.fontawesome.com/releases/v5.15.2/css/all.css" integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous")
		link(rel="stylesheet" href="css/lib/swiper.min.css")
		link(rel="stylesheet" href="css/lib/animate.css")
		link(rel="stylesheet" href="css/style.min.css")

		//- JavaScript/jQuery
		script(src="https://code.jquery.com/jquery-3.5.1.js" 
			integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
			crossorigin="anonymous")
		script(src="js/lib/swiper.min.js") 
		script(src="js/lib/wow.min.js") 
		script(src="js/script.min.js") 

	body
		block content
